<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>VNMTestOnline</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>VNMTestOnline-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>question-store</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>com.vietnamobile.questionstore.action.ConfigurationActionImpl</configuration-action-class>
		<indexer-class>com.vietnamobile.search.QuestionEntryIndexer</indexer-class>
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
    	<friendly-url-mapping>questionstore</friendly-url-mapping>
    	<friendly-url-routes>com/vietnamobile/portlet/questionstore-friendly-url-routes.xml</friendly-url-routes>
		<asset-renderer-factory>com.vietnamobile.questionentry.asset.QuestionEntryAssetRendererFactory</asset-renderer-factory>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>question-store-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>exam-online</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>com.vietnamobile.examonline.action.ConfigurationActionImpl</configuration-action-class>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>exam-online-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>vnm-report</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>vnm-report-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>